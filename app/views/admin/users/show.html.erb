<div class="profile-container w-75 d-flex mx-auto justify-content-around align-items-center border-bottom py-5">
      <%= image_tag @user.get_profile_image(100,100) %>

  <h5 class="profile-name display-4"><%= @user.name %></h5>


   <div class="mt4-auto">
      <p><%= link_to "フォロー数: #{ @user.followings.count }",user_followings_path(@user), class: "text-warning" %></p>
   </div>
   <div class="mt4-auto">
     <p><%= link_to "フォロワー数: #{ @user.followers.count }",user_followers_path(@user), class: "text-warning" %></p>
   </div>
   <div class="mt4-auto">
      <%= link_to '管理者の権限で削除ぉぉ', admin_user_path(@user), method: :delete %>
   </div>
</div>


<%= render 'public/users/list', resources: @posts %>

