<main class="mb-auto">
    <div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg rounded px-0 my-5">
     <h5 class="text-dark bg-light py-4 mb-0">通報</h5>
      <div class="form-body p-4">
        <div class="mx-auto text-center">
          <% if @report.errors.any? %>
         <ul class="alert alert-danger" role="alert">
            <h6 class="alert-heading">
            <%= @report.errors.count %>件のエラーが発生しました
            </h6>
            <% @report.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
         </ul>
        <% end %>

<%= form_with model:[@user, @report] do |f| %>
  <div class="form-group">
    <div class="field">
      <%= f.label :"通報内容" %>
    　<%= f.text_area :reason, rows:'3', class:"form-control mt-2" %>
    </div>
    <br>
    <div class="field">
     <%= f.label :"違反URL" %>
     <%= f.text_field :url, class:"form-control mt-2" %>
    </div>
    <div class="actions mt-4">
     <%= f.submit "通報する", class: "btn btn-danger" %>
  </div>
<% end %>


    </div>
  </div>
</div>
    </main>