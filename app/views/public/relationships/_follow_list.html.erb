<div class="container">
<h2 class="text-center mt-2 mb-2">Results index</h2>
<% if users.exists? %>
  <% users.each do |user| %>
    <table>
      <thead>
        <tr>
          <th>name</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td class="col-2"><%= image_tag user.get_profile_image(60,60), class:"mt-3 rounded-circle"; %></td>
          <td><%= link_to "#{ user.name }",user_path(user.id) %></td>
        </tr>
      </tbody>
    </table>
  <% end %>
<% else %>
  <p>ユーザーはいません</p>
<% end %>
</div>