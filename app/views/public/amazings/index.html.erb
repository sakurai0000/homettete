  
  <div class="card-list-container py-5">
  <% @amazing_posts.each do |post| %>
   <div class="card w-50 mx-auto mt-4 shadow-lg">
    <% if post.get_image.attached? %>
     <%= link_to post_path(post.id) do %>
      <%= image_tag post.get_image, class:"card-img-top"; %>
     <% end %>
    <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= image_tag post.user.get_profile_image(100,100), class:"mt-3 rounded-circle"; %>
        </div>
        <div class="col-10">
          <p class="card-text">
            <%= link_to(post_path(post.id), class:"text-dark") do %>
            <%= post.post %>
            <% end %>
          </p>
          <span><i class="fas fa-user"></i> By <%= post.user.name %> ｜ </span>
          
          <span><%= link_to "#{post.comments.count} コメント", post_path(post.id), class:"text-dark" %></span>
        </div>
      </div>
    </div>
  </div>
  <% end %>
  <%#= paginate posts %>
</div>