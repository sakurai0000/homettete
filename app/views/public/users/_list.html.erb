
<div class="card-list-container py-5">
  <% posts.each do |post_image| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <%#= 画像を投稿しなかった場合、画像を表示しない %>
    <% if post_image.get_image.attached? %>
     <%= link_to post_path(post_image.id) do %>
      <%= image_tag post_image.get_image, class:"card-img-top"; %>
     <% end %>
    <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= image_tag post_image.user.get_profile_image(100,100), class:"mt-3 rounded-circle"; %>
        </div>
        <div class="col-10">
          <p class="card-text">
            <%= link_to(post_path(post_image.id), class:"text-dark") do %>
            <%= post_image.post %>
            <% end %>
          </p>
          <span><i class="fas fa-user"></i> By <%= post_image.user.name %> ｜ </span>
          <span><%#= link_to "#{post_image.post_comments.count} コメント", post_image_path(post_image.id), class:"text-dark" %></span>
        </div>
      </div>
    </div>
  </div>
  <% end %>
  <%= paginate posts %>
</div>