<div class="card-list-container py-5">
  <div class="card w-50 mx-auto mt-4 shadow-lg">
   <% if @post.get_image.attached? %>
    <%= image_tag @post.get_image %>
   <% end %>
      <div class="card-body">
      <div class="row">
        <div class="col-2">
    <%= image_tag @post.user.get_profile_image(60,60), class:"mt-3 rounded-circle"; %>
    </div>
  <div class="col-10">
     <p class="card-title">
  <%= @post.post %>
     </p>
  <span><i class="fas fa-user"></i> By <%= @post.user.name %>｜ </span>
  <span><i class="fa fa-calendar"></i> <%= @post.created_at.strftime('%Y/%m/%d') %>｜ </span>

<% unless admin_signed_in? %>

  <% if @post.liked_by?(current_user) %>
      <span><%= link_to post_likes_path(@post), method: :delete do %>
        ♥<%= @post.likes.count %> いいね｜</span>
      <% end %>
    <% else %>
     <span> <%= link_to post_likes_path(@post), method: :post do %>
        ♡<%= @post.likes.count %> いいね｜</span>
      <% end %>
  <% end %>



    <% if @post.greatd_by?(current_user) %>
     <span> <%= link_to post_greats_path(@post), method: :delete do %>
        ♥<%= @post.greats.count %> すごいね｜</span>
      <% end %>
    <% else %>
      <span><%= link_to post_greats_path(@post), method: :post do %>
        ♡<%= @post.greats.count %> すごいね｜</span>
      <% end %>
  <% end %>


  <% if @post.amazingd_by?(current_user) %>
       <span><%= link_to post_amazings_path(@post), method: :delete do %>
        ♥<%= @post.amazings.count %> えらいね｜</span>
      <% end %>
    <% else %>
       <span><%= link_to post_amazings_path(@post), method: :post do %>
        ♡<%= @post.amazings.count %> えらいね｜</span>
      <% end %>
  <% end %>
<% end %>

  <% if @post.user == current_user %>
   <span> <%= link_to "削除",  post_path(@post), class: 'text-dark', method: :delete %></span>
      <% end %>

 <hr>
 <div class="comments card-text">
   <h4 class="mt-3"><%= @post.comments.count %>件コメント</h4>
 </div>
 <hr>
    <div class="card-body">
      <div class="row">
        <% @post.comments.each do |post_comment| %>
          <div class="col-2">
              <%= link_to user_path(post_comment.user.id) do %>
            <%= image_tag post_comment.user.get_profile_image(50,50) %>
            <% end %>
          </div>
          <div class="col-10">
             <p class="card-title">
              <p><%= post_comment.user.name %> | <%= post_comment.created_at.strftime('%Y/%m/%d') %></p>
              <p><b><%= post_comment.comment %></b></p>


              <% if post_comment.user == current_user %>
                <%= link_to "削除", post_comment_path(post_comment.post, post_comment), method: :delete %>
              <% end %>
              <% if admin_signed_in? %>
               <%= link_to '管理者の権限で削除ぉぉ', admin_post_comment_path(@post.id, post_comment.id), method: :delete %>
              <% end %>
              
              <hr>
           </div>
        <% end %>
      </div>
    </div>

    <% unless admin_signed_in? %>
      <div class="form-group">
      　<div class="mb-3">
          <label for="exampleFormControlTextarea1" class="form-label">コメントする</label>
          <%= form_with model: [@post, @post_comment] do |f| %>
            <%= f.text_area :comment, cols: 60, rows: '5', placeholder: "コメントをここに" %>
            <%= f.submit "送信する", class: "btn btn-outline-primary"%>
          <% end %>
        </div>
      </div>
    <% end %>




    </div>
    </div>
    </div>
    </div>
      </div>
   </div>