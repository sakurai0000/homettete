<div class="card-list-container py-5">
<% @posts.each do |posts| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg">
  <% if posts.get_image.attached? %>
  　<%= link_to post_path(posts.id) do %>
    　<%= image_tag posts.get_image, class:"card-img-top"; %>
  　<% end %>
  <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
  <!--投稿ユーザー画像-->
         <%= image_tag posts.user.get_profile_image(60,60), class:"mt-3 rounded-circle"; %>
        </div>
        <div class="col-10">
          <p class="card-text">
             <%= posts.post %>
          </p>
          <span>
           <i class="fas fa-user"></i> By <%= posts.user.name %>｜ 
          </span>
  
          <% if posts. liked_by?(current_user) %>
              <span><%= link_to post_likes_path(posts), method: :delete do %>
                ♥<%= posts.likes.count %> いいね｜</span>
              <% end %>
            <% else %>
             <span> <%= link_to post_likes_path(posts), method: :post do %>
                ♡<%= posts.likes.count %> いいね｜</span>
              <% end %>
          <% end %>
          
  
         <% if posts. greatd_by?(current_user) %>
         <span> <%= link_to post_greats_path(posts), method: :delete do %>
            ♥<%= posts.greats.count %> すごいね｜</span>
         <% end %>
        <% else %>
          <span><%= link_to post_greats_path(posts), method: :post do %>
            ♡<%= posts.greats.count %> すごいね｜</span>
          <% end %>
       <% end %>
       <% if posts. amazingd_by?(current_user) %>
           <span><%= link_to post_amazings_path(posts), method: :delete do %>
            ♥<%= posts.amazings.count %> えらいね｜</span>
          <% end %>
        <% else %>
           <span><%= link_to post_amazings_path(posts), method: :post do %>
            ♡<%= posts.amazings.count %> えらいね｜</span>
          <% end %>
      <% end %>
  <span> <%= link_to "詳細/コメント", post_path(posts), class:"text-dark" %> </span>
        </div>
      </div>
    </div>
  </div>
<% end %>

  
<div class="row">
　<div class="col-12 d-flex justify-content-center mt-5 ">
　　<%= paginate @posts %>
　</div>
</div>