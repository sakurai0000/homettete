<div class="card-list-container py-5">
 <% @posts.each do |posts| %>
 <div class="card w-50 mx-auto mt-4 shadow-lg">

  <% if posts.get_image.attached? %>
    <%= image_tag posts.get_image %>
  <% end %>
   <div class="card-body">
      <div class="row">
        <div class="col-2">
  <!--投稿ユーザー画像--><%= image_tag posts.user.get_profile_image(100,100), class:"mt-3 rounded-circle"; %>
        </div>
    <div class="col-10">
          <p class="card-title">
            <%= link_to(post_path(posts.id), class:"text-dark") do %>
            <% end %>
          </p>
  <p class="card-text">説明：<%= posts.post %></p>
  <span><i class="fas fa-user"></i> By <%= posts.user.name %>｜ </span>
         </div>
       </div>
    </div>
   </div>
<% end %>
</div>